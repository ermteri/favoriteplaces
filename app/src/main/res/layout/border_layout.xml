<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:color="#000000">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@android:color/transparent">
        <ToggleButton
            android:id="@+id/switch_tracker_service"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginLeft="@dimen/button_left_margin"
            android:layout_marginRight="@dimen/button_right_margin_large"
            android:layout_marginTop="@dimen/button_top_margin"
            android:layout_marginBottom="@dimen/button_bottom_margin"
            android:layout_gravity="left"
            android:background="@drawable/power_toggle"
            android:onClick="onSwitchTrackerServiceClicked"
            android:textOn=""
            android:textOff=""/>
        <ImageButton
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginLeft="@dimen/button_left_margin"
            android:layout_marginRight="@dimen/button_right_margin_large"
            android:layout_marginTop="@dimen/button_top_margin"
            android:layout_marginBottom="@dimen/button_bottom_margin"
            android:layout_gravity="left"
            android:background="@drawable/ic_favorite_list"
            android:onClick="onClicklistFavorites"/>

        <ImageButton
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginLeft="@dimen/button_left_margin"
            android:layout_marginRight="@dimen/button_right_margin_large"
            android:layout_marginTop="@dimen/button_top_margin"
            android:layout_marginBottom="@dimen/button_bottom_margin"
            android:layout_gravity="left"
            android:background="@drawable/ic_action_filter"
            android:onClick="onClickFilter"/>
        <ImageButton
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginLeft="@dimen/button_left_margin"
            android:layout_marginRight="@dimen/button_right_margin_large"
            android:layout_marginTop="@dimen/button_top_margin"
            android:layout_marginBottom="@dimen/button_bottom_margin"
            android:layout_gravity="left"
            android:background="@drawable/ic_action_trash"
            android:onClick="clearFavorites"/>
    </LinearLayout>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:color="#000000">
        <View
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/border_with_title"
            android:layout_marginTop="0dp"
            />
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="#000000"
                android:layout_marginTop="-10dp"
                android:text="TITLE!"
                android:textColor="#ffffff"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/border"
            android:layout_marginBottom="@dimen/button_bottom_margin">

            <LinearLayout
                android:id="@+id/currentposition"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@drawable/border"
                android:onClick="onClickCurrentPosition"
                >
                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:columnCount="1"
                    >
                    <ImageButton
                        android:layout_row="0"
                        android:id="@+id/current_location_button"
                        android:layout_width="@dimen/button_size"
                        android:layout_height="@dimen/button_size"
                        android:layout_gravity="left"
                        android:layout_marginLeft="@dimen/button_left_margin"
                        android:layout_marginRight="@dimen/button_right_margin"
                        android:layout_marginTop="@dimen/icon_margin"
                        android:layout_marginBottom="@dimen/icon_margin"
                        android:background="@drawable/ic_status_init"
                        />
                    <ImageButton
                        android:layout_width="@dimen/button_size"
                        android:layout_height="@dimen/button_size"
                        android:layout_marginLeft="@dimen/button_left_margin"
                        android:layout_marginRight="@dimen/button_right_margin"
                        android:layout_marginTop="@dimen/icon_margin"
                        android:layout_marginBottom="@dimen/icon_margin"
                        android:layout_gravity="left"
                        android:background="@drawable/ic_action_save"
                        android:onClick="saveCurrentPosition"/>
                </GridLayout>
                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/icon_margin"
                    android:layout_margin="@dimen/icon_margin"
                    android:columnCount="1">

                    <TextView
                        android:layout_row="0"
                        android:id="@+id/current_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textAppearance="?android:attr/textAppearance"
                        android:text="@string/wait_connection"
                        />
                    <TextView
                        android:layout_row="1"
                        android:id="@+id/current_status_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="..."
                        />
                    <TextView
                        android:layout_row="1"
                        android:id="@+id/current_status_accuracy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="..."
                        />
                </GridLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@drawable/border"
                android:id="@+id/lastfavorite"
                android:onClick="onClickLastFavorite">
                <ImageButton
                    android:id="@+id/button_last_favorite"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/button_left_margin"
                    android:layout_marginRight="@dimen/button_right_margin"
                    android:layout_marginTop="@dimen/icon_margin"
                    android:layout_marginBottom="@dimen/icon_margin"
                    android:background="@null"
                    />
                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/icon_margin"
                    android:columnCount="1">
                    <TextView
                        android:layout_row="0"
                        android:id="@+id/last_favorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_blue_bright"
                        android:textAppearance="?android:attr/textAppearance"
                        android:text="@string/noFavoriteFound"
                        />
                    <TextView
                        android:layout_row="1"
                        android:id="@+id/last_favorite_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text=""
                        />
                </GridLayout>

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>